{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) pvserver",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/pvserver",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            // "environment": [
            //     { "PV_PLUGIN_PATH": "${workspaceFolder}/lib" }
            // ],
            "environment": [
                { 
                    "name": "PV_PLUGIN_PATH", 
                    "value": "${command:cmake.buildDirectory}/lib/TopologyToolKit" 
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${command:cmake.buildDirectory}/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) pvpython",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/pvpython",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [ "test.py" ],
            "environment": [
                { 
                    "name": "PV_PLUGIN_PATH", 
                    "value": "${command:cmake.buildDirectory}/lib/TopologyToolKit" 
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${command:cmake.buildDirectory}/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}