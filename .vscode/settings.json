{
    // this fixes problems with TTK's dev branch and Ninja (duplicate targets)
    "cmake.buildToolArgs": [
        "-w",
        "dupbuild=warn"
    ],

    // default arguments for CMake build
    "cmake.configureArgs": [
        "-DTTK_BUILD_DOCUMENTATION=OFF",
        "-DTTK_BUILD_PARAVIEW_PLUGINS=ON",
        "-DTTK_BUILD_STANDALONE_APPS=OFF",
        "-DTTK_BUILD_VTK_WRAPPERS=ON",
        "-DTTK_BUILD_VTK_PYTHON_MODULE=OFF",
        "-DTTK_ENABLE_OPENMP=ON",
        "-DTTK_ENABLE_SHARED_BASE_LIBRARIES=ON",
    ],
}